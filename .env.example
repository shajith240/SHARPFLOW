# SharpFlow Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
# Get these from your Supabase project settings at https://supabase.com/dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL for Drizzle ORM migrations
# Format: postgresql://postgres:password@host:5432/postgres
DATABASE_URL=postgresql://postgres:your_password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Session Secret (generate a secure random string)
# Use: openssl rand -base64 32
SESSION_SECRET=your_secure_session_secret_here

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# PayPal Configuration
# Get these from your PayPal Developer Dashboard at https://developer.paypal.com/
PAYPAL_CLIENT_ID=your_paypal_production_client_id
PAYPAL_CLIENT_SECRET=your_paypal_production_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# PayPal Plan IDs (Create these in your PayPal dashboard)
PAYPAL_STARTER_MONTHLY_PLAN_ID=P-STARTER-MONTHLY-USD
PAYPAL_STARTER_YEARLY_PLAN_ID=P-STARTER-YEARLY-USD
PAYPAL_PROFESSIONAL_MONTHLY_PLAN_ID=P-PROFESSIONAL-MONTHLY-USD
PAYPAL_PROFESSIONAL_YEARLY_PLAN_ID=P-PROFESSIONAL-YEARLY-USD
PAYPAL_ENTERPRISE_MONTHLY_PLAN_ID=P-ENTERPRISE-MONTHLY-USD
PAYPAL_ENTERPRISE_YEARLY_PLAN_ID=P-ENTERPRISE-YEARLY-USD

# =============================================================================
# AUTOMATION & INTEGRATIONS
# =============================================================================

# n8n Workflow Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id

# Telegram Bot Configuration
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# =============================================================================
# EXTERNAL API SERVICES
# =============================================================================

# Apollo API (for lead data)
APOLLO_API_KEY=your_apollo_api_key

# Relevance AI API (for AI processing)
RELEVANCE_API_KEY=your_relevance_api_key

# Apify API (for web scraping)
APIFY_API_TOKEN=your_apify_api_token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Port
PORT=3000

# Application URLs
CLIENT_URL=http://localhost:3000
PRODUCTION_URL=https://your-domain.com

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT: Never commit the actual .env file to version control
# Use strong, unique passwords and secrets
# Rotate API keys regularly
# Use environment-specific configurations
